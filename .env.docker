# Docker Compose Environment Variables
# =====================================
# INSTRUCTIONS:
# 1. Copy this file: cp .env.docker .env.docker.local
# 2. Edit .env.docker.local with your credentials
# 3. Update docker-compose.yml to use .env.docker.local instead of .env.docker
# 4. Run: docker-compose up --build
#
# NEVER commit .env.docker.local to git!

# ============================================================================
# ADMIN ACCOUNT - CHANGE THESE BEFORE FIRST RUN!
# ============================================================================
ADMIN_EMAIL=admin@example.edu
ADMIN_PASSWORD=Admin123!  # Must be 8+ characters

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=production
PORT=3000

# Generate a secure secret with: openssl rand -hex 32
SESSION_SECRET=local_development_secret_change_in_production

# ============================================================================
# DATABASE CREDENTIALS
# ============================================================================
POSTGRES_DB=vocab_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password  # Change this for security!

# Database URL (auto-constructed for Docker - no need to change)
DATABASE_URL=postgres://postgres:password@db:5432/vocab_app
